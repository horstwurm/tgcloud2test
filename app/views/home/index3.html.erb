<script type="text/javascript">
  $(document).ready(function(){

    $("angebote_options").hide();
    $("kleinanzeigen_options").hide();
    $("stellenanzeigen_options").hide();
    $("crowdfunding_options").hide();
    $("kalender_options").hide();

    $("angebote").hover(function(){
        $("angebote_options").show();
    });
