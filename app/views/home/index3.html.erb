    $("kleinanzeigen").hover(function(){
        $("kleinanzeigen_options").show();
    });
    $("kleinanzeigen").mouseleave(function(){
        $("kleinanzeigen_options").hide();
    });
    $("stellenanzeigen").hover(function(){
        $("stellenanzeigen_options").show();
    });
    $("stellenanzeigen").mouseleave(function(){
        $("stellenanzeigen_options").hide();
    });
    $("crowdfunding").hover(function(){
        $("crowdfunding_options").show();
    });
    $("crowdfunding").mouseleave(function(){
        $("crowdfunding_options").hide();
    });
    $("kalender").hover(function(){
        $("kalender_options").show();
    });
    $("kalender").mouseleave(function(){
        $("kalender_options").hide();
    });
});
</script>
