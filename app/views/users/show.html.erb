                                <i class="btn btn-danger btn-xs glyphicon glyphicon-trash"></i>
                              <% end %>
                              <% @total[i] = @total[i] + plans[k][:kapa] %>
                              <% kapa = true %>
                            <% end %>
                          <% end  %>
                          <% if !kapa %>
                              <td>
              				        <%= link_to new_planning_path(:mobject_id => w.id, :user_id => current_user.id, :month => @data[i], :year => @c_year) do %>
