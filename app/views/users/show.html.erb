                      <% if @total[i] >125 %>
                        <div class="progress-bar progress-bar-danger" role="progressbar" style="width: <%= @total[i] %>%" >
                      <% end %>
                      </div>
                      </td>
                    <% end %>
                  </tr>
                </table>

              </div>
            </div>
