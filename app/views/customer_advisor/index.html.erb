
	<div class="row">
    <div class="col-md-12">
      <div class="panel-heading header">
        <li_header>
          <%= link_to customer_advisor_index2_path :partner_id => @customer.partner_id, :page => session[:page] do %>
            <i class="btn btn-primary btn-lg glyphicon glyphicon-list"></i>
          <% end %>
          KUNDENBERATER f√ºr Kunde <%= @name %>
          <span class="badge"><%= @usanz %></span>
        </li_header>
      </div>
