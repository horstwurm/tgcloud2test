        						<%= link_to "Test", home_index17_path %><br><br>
    					   <% end %>
                        <% end %>
                    </footer_text>
                </div>
            <% end %>

            <div class="col-sm-6 col-md-4 col-lg-3">
                <footer_header>
                    <%= (I18n.t :partner) %>
                </footer_header>
                <br>
                <footer_text>
                <% @partners = Company.where('partner=?','t') %>
                <% @partners.each do |p| %>
                    <%= link_to p do %>
                        <%= p.name %><br>
                    <% end %>
                <% end %>
                </footer_text>
            </div>
    </div>
