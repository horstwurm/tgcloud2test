                <br>
                <footer_text>
                    <%= link_to((I18n.t :info), home_index_path) %><br>
                    <%= link_to((I18n.t :ueberuns), url_with_protocol("ueber_uns.html"), :target => '_blank') %><br>
                    <%= link_to((I18n.t :impressum), url_with_protocol("impressum.html"), :target => '_blank') %><br>
